[STATUS]
status=train

[IO]
type=csv
train_file=dataset/aivivn/train.csv
test_file=dataset/aivivn/test.csv
text_column=discriptions
label_column=mapped_rating
batch_size=512
val_ratio=0.2
nrows=None
output_dir=output/aivivn/models/rnn/4
pretrained_embedding=/data/cuong/data/nlp/embedding/cc.vi.300.vec

[MODEL]
type=rnn
rnn_type=gru
hidden_size=200
n_label=2
embedding_size=300
bidirectional=True
dropout_p=0.0
input_dropout_p=0.0
n_encoder_layer=2
attention=True
attention_type=general

[TRAIN]
use_label_smoothing=False
use_gpu=True
n_epoch=30
learning_rate=0.001
